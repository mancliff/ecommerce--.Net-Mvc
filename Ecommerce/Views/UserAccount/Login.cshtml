@model Ecommerce.Models.LoginModel
@{
    ViewBag.Title = "Login";

}
<style>
    fieldset {
        border: 0;
        margin-top: 20px;
        min-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    .btn1 {
        border: none;
        outline: none;
        height: 40px;
        width: 100%;
        background-color: black;
        color: white;
        border-radius: 4px;
        font-weight: bold;
    }

        .btn1:hover {
            background-color: white;
            border: 1px solid;
            color: black;
        }

    .form-control {
        margin-bottom: 15px;
    }

    h4 {
        margin-left: 15px;
    }

    img {
        height: 250px;
        width: 100%;
    }

    .text-danger {
        margin-left: 15px;
    }

    .bottom-space {
        margin-top: 15px;
    }
</style>


<hr />
<fieldset>
    <legent>

    </legent>
    @using (Html.BeginForm("Login", "userAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()


        <section class="Form my-4 mx-5">
            <div class="container">
                <div class="row no-gutters">
                    <div class="col-lg-5">
                        <img src="~/images/folder.jpg" class="img-fluid" />
                    </div>
                    <div class="col-lg-7 px-5 pt-5">
                        <h4>Sign into your account</h4>
                        <form>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-row">

                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-row">

                                <div class="col-lg-7">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-lg-7">
                                    <input type="submit" class="btn1" value="Login" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-lg-7">
                                    <div class="botton-space">
                                        <a href="#">Forgot Password</a>
                                        <p>Don't have an Account?<a href="#">Register here</a></p>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </section>
    }
   
</fieldset>

